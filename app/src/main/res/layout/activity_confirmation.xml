<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5"
    tools:context=".ConfirmationActivity">

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header with Icon -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_baseline_restaurant_menu_24"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:tint="#FF4081"/>

            <!-- Page Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Food"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"/>

            <!-- Order Details Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <!-- Food Name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food Name"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvFoodNameValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    tools:text="Batagor"/>

                <!-- Quantity -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of Servings"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvQuantityValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    tools:text="2 pax"/>

                <!-- Customer Name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ordering Name"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvCustomerNameValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    tools:text="Usep"/>

                <!-- Additional Notes -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Notes"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvNotesValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    tools:text="Tidak Pedas"/>
            </LinearLayout>

            <!-- Confirmation Message -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanks for your order and please wait for delivering by nearest courier"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#4CAF50"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/backtoMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Menu"
                android:textAllCaps="false"
                android:padding="12dp"
                app:cornerRadius="8dp"
                android:backgroundTint="#FF4081"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>